{
  "scripts": {
    "dev": "NODE_ENV=development HOT=1 yarn start-backend",
    "dev-ssr": "NODE_ENV=development yarn start-browser & NODE_ENV=development yarn start-server & NODE_ENV=development yarn start-backend",
    "start-browser": "webpack -w --config webpack.config.browser.js",
    "start-server": "webpack -w --config webpack.config.server.js",
    "start-backend": "nodemon -w functions/src -x 'babel-node --presets \"@babel/preset-env\" functions/src/index.js'",
    "build": "NODE_ENV=production yarn build-browser && NODE_ENV=production yarn build-server",
    "build-browser": "webpack --config webpack.config.browser.js",
    "build-server": "webpack --config webpack.config.server.js",
    "test": "eslint src && eslint functions/src",
    "deploy": "firebase deploy",
    "format": "prettier-eslint src && prettier-eslint functions/src"
  },
